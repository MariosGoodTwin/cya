#!/bin/bash
#
# This file will be sudo-executed by cya_shell. Perform your backup from here.
#
# It will be given a single argument, the directory on the archive server to
# which to upload the backup.
#

exec duplicity / "scp://archive@140.252.24.70/$1" \
	--no-encryption --asynchronous-upload --volsize 100 \
	--exclude /var --exclude /dev --exclude /proc --exclude /selinux --exclude /sys --exclude /cgroup \
	--exclude /data --exclude /home --exclude /root
